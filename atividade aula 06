nome_funcionario = str(input("nome do funcionário: "))
quantidade_vendas = int(input("sua quantidade de vendas: "))

count = 1
soma = 0.0

while count <= quantidade_vendas:
    print("valor da venda", count, ":")
    valor_venda = float(input())
    if valor_venda >= 0 and valor_venda <= 500.000:
        soma += valor_venda
        count += 1
    else:
        print("erro")
        print("digite novamente!")
        print("digite novamente.")
        valor_venda = int(input())
        soma += valor_venda
        count += 1

print(soma)

media = soma / quantidade_vendas
print(media)

meta = soma

if meta >= 100.000:
    print("O funcionário {} atingiu a meta! Fazendo {} no mês.".format(nome_funcionario, meta))
else:
    print("O funcionário {} não atingiu a meta! Fazendo {} no mês.".format(nome_funcionario, meta))
